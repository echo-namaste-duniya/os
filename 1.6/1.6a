#!/bin/bash

# Check if a filename is provided
if [ $# -ne 1 ]; then
    echo "Usage: $0 filename"
    exit 1
fi

filename="$1"

# Use find to look for the file and check the exit status
if ! find . -name "$filename" -print -quit | grep -q .; then
    echo "File '$filename' was not found"
else
    echo "File '$filename' was found"
fi